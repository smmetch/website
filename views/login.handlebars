<div class="login">
  <form action="/login" method="POST"> <!-- Set the action attribute to the login route -->
    <h1>Login</h1>
    <div class="content">
      <div class="input-field">
        <input type="email" name="email" placeholder="EMAIL" /> <!-- Add name attribute for form data -->
      </div>
      <div class="input-field">
        <input type="password" name="password" placeholder="PASSWORD" /> <!-- Add name attribute for form data -->
      </div>
      {{#if error}}
        <p style="color: red; justify-content: center; margin-top: 10px">Incorrect Credentials</p>
      {{/if}}
    </div>
    <div class="action">
      <a href="/signup">SIGN-UP</a>
      <button type="submit">LOG-IN</button> <!-- Use a button element to submit the form -->
    </div>
  </form>
</div>